    function applyLanguage(lang) {
        document.querySelectorAll('[data-i18n]').forEach(function(el) {
            var key = el.getAttribute('data-i18n');
            if (translations[lang] && translations[lang][key]) {
                el.textContent = translations[lang][key];
            }
        });
        document.querySelectorAll('[data-i18n-html]').forEach(function(el) {
            var key = el.getAttribute('data-i18n-html');
            if (translations[lang] && translations[lang][key]) {
                var text = translations[lang][key];
                text = text.replace('{{year}}', new Date().getFullYear().toString());
                el.innerHTML = text;
            }
        });
        document.documentElement.lang = lang;
        document.querySelectorAll('.lang-option').forEach(function(btn) {
            if (btn.getAttribute('data-lang') === lang) {
                btn.classList.add('active');
            } else {
                btn.classList.remove('active');
            }
        });
        localStorage.setItem('lang', lang);
    }

    document.addEventListener('DOMContentLoaded', function() {
        var saved = localStorage.getItem('lang');
        var browserLang = navigator.language.startsWith('en') ? 'en' : 'es';
        var lang = saved || browserLang;

        if (lang !== 'es') {
            applyLanguage(lang);
        }

        document.querySelectorAll('.lang-option').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var selectedLang = btn.getAttribute('data-lang');
                applyLanguage(selectedLang);
            });
        });
    });
})();
